<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorNavBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="PreferenceScreen" parent="AppTheme">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/blue_grey_900
        </item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/blue_grey_900</item>
    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
